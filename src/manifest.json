{
    "manifest_version": 3,
    "name": "Share Mail",
    "description": "Create shareable links to your emails",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/mail/u/*"],
            "js": ["index.js"]
        }
    ]
}
